{
    "identifier"        : "distance",
    "schemaInfo": {
        "identifier": "Distance Recorder",
        "revision": 1
    },
    "actions"           : { "cancel": { "type": "default", "iconName": "closeActivity" }},
    "shouldHideActions" : ["goBackward", "skip"],
    "steps"             : [
                           {
                           "identifier"     : "run",
                           "type"           : "section",
                           "asyncActions"      : [
                                                  {
                                                  "identifier"              : "location",
                                                  "type"                    : "distance",
                                                  "startStepIdentifier"     : "countdown",
                                                  "motionStepIdentifier"    : "walk"
                                                  }
                                                  ],
                           "steps"          : [
                                               {
                                               "identifier"   : "instruction",
                                               "type"         : "instruction",
                                               "title"        : "Please hold your phone",
                                               "text"         : "Go outside. After the countdown step, begin walking with your phone."
                                               },
                                               {
                                               "identifier"     : "countdown",
                                               "type"           : "countdown",
                                               "duration"       : 5,
                                               "commands"       : ["playSoundOnStart", "transitionAutomatically"]
                                               },
                                               {
                                               "identifier"         : "walk",
                                               "type"               : "active",
                                               "duration"           : 30,
                                               "commands"           : ["transitionAutomatically", "shouldDisableIdleTimer", "vibrate",
                                                                       "playSound"],
                                               "spokenInstructions" : { "start": "Start walking",
                                                                        "halfway": "Halfway there!",
                                                                        "end": "You're done!"}
                                               }
                                               ]
                           },
                           {
                           "identifier"   : "completion",
                           "type"         : "completion",
                           "title"        : "Great Job!",
                           "text"         : "You have completed this task."
                           }
                           ]
}
